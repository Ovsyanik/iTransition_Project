@inject IViewLocalizer Localizer
<div class="row">
    <div class="col-md-6">
        <h2>@Localizer["LocalLoginTitle"]</h2>
        <hr />
        <form method="post" action="~/account/AuthenticationUser">
            <div class="form-group">
                <label for="email">@Localizer["Email"]</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="@Localizer["EmailPlaceholder"]">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">@Localizer["Password"]</label>
                <input type="password" class="form-control" id="password" 
                       name="password" placeholder="@Localizer["PasswordPlaceholder"]">
            </div>
            <button type="submit" class="btn btn-primary">@Localizer["Submit"]</button>
        </form>
    </div>


    <div class="col-md-6">
        <h2>@Localizer["ExternalLoginTitle"]</h2>
        <hr />
        <a class="btn btn-primary" asp-controller="Account" asp-action="GoogleLogin">Google</a>
        <a class="btn btn-primary" asp-controller="Account" asp-action="FacebookLogin">Facebook</a>
    </div>

</div>

